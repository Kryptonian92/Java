	//Replaces negative numbers with 0
	public void eliminate(){
		
		int j=0;
		ArrayList<Integer> numArr = new ArrayList<Integer>();
		int[] newArr = {1,5,-6,3,7};
//		array = ArrayUtils.removeElement(newArr, 3);
//		numArr.add(1); numArr.add(-5); numArr.add(10); numArr.add(-2);
		for(int i : numArr){
			if(i<0){
				System.out.println(i);
//				numArr.remove(i);
			}
		}
//		numArr.remove(0);
//		numArr.add(3, 22);
		System.out.println(numArr);
		for(j=0; j<newArr.length; j++){
			if(newArr[j]>0){
				System.out.println("negative " + newArr[j]);
				numArr.add(newArr[j]);
			}
//			System.out.println(newArr[j]);
//			System.out.println(Arrays.toString(newArr));
		}
		System.out.println(numArr);
	}
